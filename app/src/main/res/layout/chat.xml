<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:scaleType="fitCenter"
    android:adjustViewBounds="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_chat_bubble"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:contentDescription="@string/support_chat_bubble"
        android:scaleType="fitXY"
        android:scaleX="-1"
        android:src="@drawable/ic_chat_bubble_black_24dp"
        android:tint="@color/colorWBlue" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:text="@string/support_chat_bubble"
        android:textAlignment="center"
        android:textColor="@color/colorDBlue"
        android:textSize="15sp" />

</RelativeLayout>